NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000

DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Preferred for Upstash:
# REDIS_URL=rediss://default:password@your-upstash-host:6379
# Upstash also gives REST credentials (not used by this ioredis-based app):
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# Local Redis fallback (use this block when not using REDIS_URL):
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TLS=false
# Optional auth for local/other providers:
# REDIS_USERNAME=default
# REDIS_PASSWORD=change_me_redis_password

# RS256 keys must be PEM values escaped with \n
JWT_ACCESS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nreplace_me\\n-----END PRIVATE KEY-----"
JWT_ACCESS_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\\nreplace_me\\n-----END PUBLIC KEY-----"
JWT_REFRESH_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nreplace_me\\n-----END PRIVATE KEY-----"
JWT_REFRESH_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\\nreplace_me\\n-----END PUBLIC KEY-----"

JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Optional overrides (defaults: TRUST_PROXY=production?true:false, PINO_LEVEL=info)
# TRUST_PROXY=false
# PINO_LEVEL=info
# LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
# LOGIN_RATE_LIMIT_WINDOW_SECONDS=900
