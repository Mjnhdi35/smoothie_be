NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false
PINO_LEVEL=info

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=smoothie_db
POSTGRES_USER=smoothie_user
POSTGRES_PASSWORD=change_me_postgres_password
POSTGRES_SSL=false

# Optional: use a single URL instead of POSTGRES_* fields (ex: Neon)
# DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=change_me_redis_password
REDIS_TLS=false

# RS256 keys must be PEM values escaped with \n
JWT_ACCESS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nreplace_me\\n-----END PRIVATE KEY-----"
JWT_ACCESS_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\\nreplace_me\\n-----END PUBLIC KEY-----"
JWT_REFRESH_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nreplace_me\\n-----END PRIVATE KEY-----"
JWT_REFRESH_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\\nreplace_me\\n-----END PUBLIC KEY-----"

JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_FINGERPRINT_SECRET=replace_me_long_random_secret

LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW_SECONDS=900
