NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000

DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Required (Upstash Redis REST):
UPSTASH_REDIS_REST_URL=https://<your-upstash-host>.upstash.io
UPSTASH_REDIS_REST_TOKEN=<your-upstash-rest-token>

# HS256 secrets
JWT_ACCESS_SECRET=change_me_access_secret
JWT_REFRESH_SECRET=change_me_refresh_secret

JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
# Optional JWT claims hardening (defaults shown)
# JWT_ISSUER=api-smoothie
# JWT_AUDIENCE=api-smoothie-users

# Optional overrides (defaults: TRUST_PROXY=production?true:false, PINO_LEVEL=info)
# TRUST_PROXY=false
# PINO_LEVEL=info
# PINO_PRETTY=true
# BCRYPT_SALT_ROUNDS=12
# LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
# LOGIN_RATE_LIMIT_WINDOW_SECONDS=900
